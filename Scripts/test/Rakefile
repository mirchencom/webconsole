require 'shellwords'
require 'webconsole'
require WebConsole::shared_test_resource("ruby/test_constants")
require WebConsole::Tests::TEST_HELPER_FILE

PROJECT_ROOT_PATH = File.join(File.dirname(__FILE__), "..", "..")
XCODE_PROJECT_FILE_PATH = File.join(PROJECT_ROOT_PATH, "Web Console/Web Console.xcodeproj")
XCODE_BUILD_SCHEME = "Web Console"
WEBCONSOLE_GEM_PATH = File.join(PROJECT_ROOT_PATH, "webconsole")
PLUGIN_PATH = File.join(PROJECT_ROOT_PATH, "Web Console", "Plugins")
PLUGIN_RESOURCES_PATH_COMPONENT = "Contents/Resources"

task :default => [:xcunit, :ruby]

task :long => [:xcunit, :ruby_long]
task :xcunit => ['xcunit:tests']
task :ruby => [:web_console, :gems, :plugins, :other]

task :ruby_long => [:web_console_long, :gems, :plugins]
task :web_console => ['web_console:tests']
task :web_console_long => ['web_console:tests_long']
task :gems => ['gems:tests']
task :plugins => ['plugins:tests']
task :other => ['other:tests']


namespace :gems do

  webconsole_gem_tests_rakefile = File.join(WEBCONSOLE_GEM_PATH, "test", "Rakefile")
  load webconsole_gem_tests_rakefile

  task :tests => [:test_webconsole]

  task :test_webconsole => ['webconsole:clean_up']

end

namespace :plugins do

  wcsearch_test_rakefile = File.join(PLUGIN_PATH, "Search.wcplugin", PLUGIN_RESOURCES_PATH_COMPONENT, "test", "Rakefile")
  load wcsearch_test_rakefile

  wcirb_test_rakefile = File.join(PLUGIN_PATH, "IRB.wcplugin", PLUGIN_RESOURCES_PATH_COMPONENT, "test", "Rakefile")
  load wcirb_test_rakefile

  wccoffee_test_rakefile = File.join(PLUGIN_PATH, "Coffee.wcplugin", PLUGIN_RESOURCES_PATH_COMPONENT, "test", "Rakefile")
  load wccoffee_test_rakefile

  wcnode_test_rakefile = File.join(PLUGIN_PATH, "Node.wcplugin", PLUGIN_RESOURCES_PATH_COMPONENT, "test", "Rakefile")
  load wcnode_test_rakefile

  task :tests => [:test_wcsearch, :test_wcirb, :test_wccoffee, :test_wcnode]

  task :test_wcsearch => ['wcsearch:tests']

  task :test_wcirb => ['wcirb:tests']

  task :test_wccoffee => ['wccoffee:tests']

  task :test_wcnode => ['wcnode:tests']
end


namespace :other do

  wcrepl_test_rakefile = File.join(PLUGIN_PATH, "Shared Resources.wcplugin", PLUGIN_RESOURCES_PATH_COMPONENT, "ruby", "wcrepl", "test", "Rakefile")
  load wcrepl_test_rakefile

  wcdependencies_test_rakefile = File.join(PLUGIN_PATH, "Shared Resources.wcplugin", PLUGIN_RESOURCES_PATH_COMPONENT, "ruby", "wcdependencies", "test", "Rakefile")
  load wcdependencies_test_rakefile

  task :tests => [:test_wcrepl, :test_wcdependencies]

  task :test_wcrepl => ['wcrepl:tests']

  task :test_wcdependencies => ['wcdependencies:tests']
end


namespace :xcunit do

  task :tests => ['test_xcunit']

  task :test_xcunit do
    sh "xcodebuild test -scheme #{Shellwords.escape(XCODE_BUILD_SCHEME)} -project #{Shellwords.escape(XCODE_PROJECT_FILE_PATH)}"
  end

end


namespace :web_console do

  task :tests => [:clean_up]
  task :tests_long => [:test_web_console_long, :tests]

  task :clean_up => [:test_web_console_tasks, :test_web_console_resizing] do
    WebConsole::Tests::Helper::quit
  end

  task :test_web_console_tasks do
    web_console_tests_file = File.join(File.dirname(__FILE__), "tc_web_console_tasks.rb")
    ruby Shellwords.escape(web_console_tests_file)
  end

  task :test_web_console_resizing do
    web_console_tests_file = File.join(File.dirname(__FILE__), "tc_web_console_resizing.rb")
    ruby Shellwords.escape(web_console_tests_file)
  end

  task :test_web_console_long do
    web_console_tests_long_file = File.join(File.dirname(__FILE__), "tc_web_console_long.rb")
    ruby Shellwords.escape(web_console_tests_long_file)
  end

end





